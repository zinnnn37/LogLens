# ==========================================
# MySQL Logging Configuration for LogLens
# ==========================================

[mysqld]

# ==========================================
# Error Log 설정
# ==========================================
log-error=/var/log/mysql/error.log
log_error_verbosity=2

# ==========================================
# Slow Query Log 설정
# ==========================================
slow_query_log=1
slow_query_log_file=/var/log/mysql/slow.log
long_query_time=0.5
log_queries_not_using_indexes=0

# ==========================================
# 로그 타임스탬프 포맷
# ==========================================
log_timestamps=SYSTEM
