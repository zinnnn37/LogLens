# ============================================
# AI 로그 분석 서비스 환경변수
# ============================================

# === OpenAI API via GMS (필수) ===
# SSAFY GMS에서 발급받은 API 키를 사용하세요
# GMS 포털: https://gms.ssafy.io/
OPENAI_API_KEY=your-gms-api-key-here
OPENAI_BASE_URL=https://gms.ssafy.io/gmsapi/api.openai.com/v1
EMBEDDING_MODEL=text-embedding-3-large
LLM_MODEL=gpt-4o-mini

# === OpenSearch 설정 (필수) ===
# Docker network 내에서 서비스 이름으로 접근
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=Admin123!@#

# === Kafka 설정 (필수) ===
# Docker network 내에서 서비스 이름으로 접근
# kafka:19092는 컨테이너 간 통신용 내부 포트
KAFKA_BOOTSTRAP_SERVERS=kafka:19092
KAFKA_TOPIC=application-logs
KAFKA_GROUP_ID=log-analysis-consumer

# === 애플리케이션 설정 ===
APP_NAME=log-analysis-api
APP_VERSION=1.0.0
ENVIRONMENT=production
SERVICE_PORT=8000
LOG_LEVEL=INFO

# === 분석 설정 ===
# 유사도 임계값 (0.8 이상이면 캐시된 분석 재사용)
SIMILARITY_THRESHOLD=0.8
# 챗봇에서 참조할 최대 로그 개수
MAX_CONTEXT_LOGS=5
